<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:centerColor="#FF7E3DC4"
                android:centerX="7%"
                android:endColor="#FFac5df9"
                android:startColor="#FF8240bd"
                android:type="linear" />
        </shape>

        <shape android:shape="rectangle">
            <gradient
                android:centerColor="#FF7E3DC4"
                android:centerX="50%"
                android:centerY="50%"
                android:endColor="#FFac5df9"
                android:gradientRadius="7"
                android:startColor="#FF8240bd"
                android:type="radial" />
        </shape>
    </item>

</layer-list>